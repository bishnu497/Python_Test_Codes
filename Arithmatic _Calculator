#Arithmatic Calculator
#Defining arithmatic operators

def dev(x,y):
    return x/y 
def mul(x,y): 
    return x*y 
def add(x,y): 
    return x+y 
def sub(x,y): 
    return x-y

#Options for operation

print("Operations")
print("1.DEV") 
print("2.MUL") 
print("3.ADD") 
print("4.SUB") 
operation_number=input("select operation(1/2/3/4): ") 
a=int(input("Enter 1st number: ")) 
b=int(input("Enter 2nd number: "))

#loop for operation

if operation_number == '1':
    print(dev(a,b)) 

elif operation_number == '2': 
    print(mul(a,b)) 
    
elif operation_number == '3': 
    print (add(a,b)) 
    
elif operation_number == '4': 
    print(sub(a,b)) 
    
else : print("You choosed wrong option.Choose within the options!"
